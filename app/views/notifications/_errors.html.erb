<% flash.each do |key, value| %>
    <% if value.class == Array %>
    
        <div class="<%= flash_class(key) %>">
            <button type="button" class="close" data-dismiss="alert">×</button>
            
                <%=value.first %>
                </br>
          
        </div>
          
    <% else %>
        <div class="<%= flash_class(key) %>">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <%= value %>
        </div>
    <% end %>
<% end %>