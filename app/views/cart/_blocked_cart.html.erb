<% provide(:title, "Meu carrinho") %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="clearfix">
          <div class="pull-left">
            <h3 class="logo">Lista de compras</h3>
          </div>
        
        </div>
        <hr>
        <div class="row">
          <div class="col-md-12">
           <div class="pull-right ">
                           <h4><br>
                              <strong> Dados do comprador:</strong>
                           </h4>
                           <p><strong> Nome: </strong> <%= current_user.name%></p>
                              <p class="m-t-10"><strong> Email: </strong> <%=current_user.email %></p>
             </div>
           <div class="pull-left ">
                            <h4><br>
                              <strong> Dados da compra:</strong>
                           </h4>
                              <p><strong> Data:<%= DateTime.now.strftime(" %d/%m/%Y -%H : %M") %> h</strong> </p>
                              <p class="m-t-10"><strong> Status do pedido: </strong> <span class="label label-pink"><%= current_user.payment.status%></span></p>
                             
                              <p class="m-t-10"><strong>Pacote inclui: </strong> <%=@package.lectures%> palestras + <%=@package.courses%> mini-cursos + <%=@package.visits%> visitas </p>
                               <p class="m-t-10"><strong>Eventos adicionados: </strong> <%=@user_cart[:lectures]%> palestras  + <%=@user_cart[:courses]%> mini-cursos + <%=@user_cart[:visits]%> visitas </p>
                           </div>
          </div>
          <!-- end col -->
        </div>
        <!-- end row -->
        <div class="m-h-50"></div>
        <div class="row">
          <div class="col-md-12">
            <div class="table-responsive">
              <table class="table m-t-30">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Evento</th>
                    <th>Descrição</th>
                    <th>tipo</th>
                    <th>Custo</th>
                    <th>Total</th>
                  </tr>
                </thead>
                <tbody>
                  <% @cart_events.each do |cart| %>
                  <tr>
                    <td>1</td>
                    <td><%=cart.name%></td>
                    <td><%=cart.description%></td>
                    <td><%=cart.kind%></td>
                    <td>$380</td>
                    <td>$380</td>

                  </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-6">
           
<%= render_payment_form %>
      </div>
      <div class="col-md-3 col-sm-6 col-xs-6 col-md-offset-3">
         <p class="text-right"><b>Tipo de desconto:</b> <%=@package.title%> </p>
         
        <hr>
        <h3 class="text-right">R$ <%=@cart_total%></h3>
      </div>
    </div>

    <hr>
    <div class="hidden-print">
      <div class="pull-left">
        <h5 class="m-t-40"><b>Deseja alterar a forma de pagamento ?</b></h5>
        <div class="form-group m-b-0">
          <button class="btn btn-primary waves-effect waves-light" type="submit">
            Solicitar alteração
          </button>
        </div>
      </div>
    </div>


 
  </div>
</div>
</div>
</div>
<!-- ============================================================== -->
<!-- End Right content here -->
<!-- ============================================================== -->