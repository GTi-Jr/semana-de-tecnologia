
<% provide(:title, "Configurações de conta") %>

<!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                        <div class="row">
                          <div class="col-sm-12">
                            <div class="card-box">
<div class="row">





<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal',method: :put }) do |f| %>
  <%= devise_error_messages! %>
 <%= render 'notifications/errors' %>

  <div class="form-group">
    <label class="col-md-2 control-label" >Nome</label>
    <div class="col-md-10">
    <%= f.text_field :name, autofocus: true, class:'form-control' %>
    </div>
  </div>






  <div class="form-group">
    <label class="col-md-2 control-label" for="example-email">Email</label>
    <div class="col-md-10">
    <%= f.email_field :email, autofocus: true, class:'form-control' %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
     <label class="col-md-2 control-label" >Nova senha  <em>(mínimo 6 dígitos)</em></label> 
     <div class="col-md-10">
    <%= f.password_field :password, class:'form-control', autocomplete: "off",  placeholder:'preencha esse campo caso queira mudar sua senha ' %>
    </div>
  </div>

  <div class="form-group">
     <label class="col-md-2 control-label">Confirme sua nova senha</label>
    <div class="col-md-10">
    <%= f.password_field :password_confirmation,class:'form-control', autocomplete: "off" %>
     </div>
  </div>

  <div class="form-group">
     <label class="col-md-2 control-label" >Senha atual</label> 
    <div class="col-md-10">
    <%= f.password_field :current_password,class:'form-control', autocomplete: "off" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar", class:'btn btn-primary' %>
  </div>
<% end %>

<h3>Cancelar conta</h3>

<p>Não está satisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name),class:'btn btn-danger', data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
</div>
</div>
</div>
</div>
</div>




