<div class="row">
  <div class="col-sm-12">
    <div class="card-box table-responsive">
      <h4 class="header-title m-t-0 m-b-30">Events</h4>
      <div class="row">
        <div class="col-sm-6">
          <div class="m-b-30">
            <%= link_to(new_admin_event_path, class:'btn btn-primary waves-effect waves-light') do %>
            New Event <i class="fa fa-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="responsive">
        <table class="table table-striped" id="datatable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Facilitator</th>
              <th>Inscritos</th>
              <th>Vagas restantes/Total</th>
              <th data-orderable="false"></th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.description %></td>
              <td><%= event.facilitator %></td>
              <td><%= event.buyers.count %></td>
              <td><%= event.remaining %>/<%= event.limit %></td>
              <td>
                <div class="btn-group m-b-10">
                  <%= link_to 'Mostrar', admin_event_path(event), class: 'btn btn-rounded btn-primary waves-effect' %>
                  <%= link_to 'Editar', edit_admin_event_path(event), class: 'btn btn-rounded btn-primary waves-effect' %>
                  <%= link_to 'Deletar', admin_event_path(event), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-rounded btn-danger waves-effect' %>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div><!-- end col -->
</div>