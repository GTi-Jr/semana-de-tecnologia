<%= form_for [:admin, @event] do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :facilitator %>
    <%= f.text_field :facilitator, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :limit %>
    <%= f.number_field :limit, class: 'form-control' %>
  </div>
  <%= f.label :schedules %>
  <div class="form-inline">
    <%= f.fields_for :schedules do |schedule_form|%>
      <% render 'schedule_fields', f: schedule_form %>
    <% end %>
  </div>
  <div class="form-group text-right m-b-0">
    <%= link_to_add_fields "New Schedule", f, :schedules %>
    <%= button_tag "Save event", type:'submit', class:'btn btn-primary waves-effect waves-light' %>
  </div>
<% end %>
