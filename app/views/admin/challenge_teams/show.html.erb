<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-color panel-tabs panel-primary">
      <div class="panel-heading">
        <ul class="nav nav-pills pull-right">
          <li class="active">
            <a href="#info" data-toggle="tab" aria-expanded="true">Sobre</a>
          </li>
          <li class="">
            <a href="#users" data-toggle="tab" aria-expanded="false">Membros</a>
          </li>
        </ul>
        <h3 class="panel-title">Equipe <%= @challenge_team.name %></h3>
      </div>
      <div class="panel-body">
        <div class="tab-content">
          <div id="info" class="tab-pane fade in active">
            <div class="row">
              <div class="col-md-12">
                <p>
                  <strong>Email do responsável: </strong><%= @challenge_team.email %>
                </p>
                <p>
                  <strong>Método de pagamento: </strong><%= @challenge_team.payment_method %>
                </p>
                <p>
                  <strong>Status de pagamento: </strong><%= payment_status @challenge_team.payment_status %>
                </p>
                <p>
                  <strong>Número de membros: </strong><%= @challenge_team.limit %>
                </p>
              </div>
            </div>
          </div>
          <div id="users" class="tab-pane fade">
            <div class="row">
              <div class="col-md-12">
                <% if  @challenge_team_members.empty? %>
                  <p>Nenhum membro inscrito</p>
                <% else %>
                  <ul class="list-group">
                    <% @challenge_team_members.each do |member|%>
                      <li class="list-group-item">
                        <%= member.name %> / <%= member.email %>
                      </li>
                    <% end %>
                  </ul>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <%= link_to 'Todos as equipes', admin_challenge_teams_path, class: 'btn btn-primary waves-effect w-md waves-light m-b-5'%>
        <% if  @challenge_team.payment_status %>
          <a class="btn btn-success waves-effect w-md waves-light m-b-5 disabled">Pagamento já confirmado </a>
        <% else %>
          <%= link_to 'Confirmar pagamento', admin_challenge_team_confirm_payment_path(@challenge_team), data: { confirm: 'Tem certeza?' }, method: :post, class: 'btn btn-success waves-effect w-md waves-light m-b-5'%>
        <% end %>
      </div>
    </div>
  </div><!-- end col -->
</div>