<%= form_for [:admin, @admin_user] do |f| %>
  <% if @admin_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_user.errors.count, "Erro") %></h2>

      <ul>
      <% @admin_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :course %>
    <%= f.text_field :course, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :semester %>
    <%= f.number_field :semester, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :birthday %>
    <%= to_date_field f, @admin_user, :birthday, {class: "date form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :university %>
    <%= f.text_field :university, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :size, "Tamanho da blusa"   %><br />
    <%= f.select :size, options_for_select(sizes_to_array, selected: @admin_user.size), {}, class: 'form-control' %>
  </div>
  <div class="form-group text-right m-b-0">
    <%= button_tag "Save User", type:'submit', class:'btn btn-purple waves-effect waves-light' %>
  </div>
<% end %>
