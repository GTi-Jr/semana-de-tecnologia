<%= form_tag(admin_change_user_payment_path(:admin, @admin_user), method: :patch, class: 'form-horizontal') do %>
  <div class="form-group">
    <label class="col-md-4 control-label">Método de pagamento </label>
    <div class="col-md-8">
      <%= select_tag(:payment_method, options_for_select([['Dinheiro', 1], ['Boleto', 2]]), class:'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label">Pagamento efetuado? </label>
    <div class="col-md-8">
      <%= select_tag(:portions, options_for_select([['Sim', 1], ['Não', 2]]), class:'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-10 col-sm-2">
      <button type="submit" class="btn btn-primary">
        Salvar
      </button>
    </div>
  </div>
<% end %>