  <div class="row">
  <div class="col-sm-12">
    <div class="card-box table-responsive">
      <h4 class="header-title m-t-0 m-b-30">Comments</h4>
      <div class="row">
        <div class="col-sm-6">
          <div class="m-b-30">
            <%= link_to(new_admin_comment_path, class:'btn btn-primary waves-effect waves-light') do %>
            Novo recado <i class="fa fa-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="responsive">
        <table class="table table-striped" id="datatable">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th data-orderable="false"></th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do |comment| %>
            <tr>
              <td><%= comment.title %></td>
              <td><%= comment.description %></td>
              <td class="actions pull-right">
                <div class="btn-group m-b-10">
                  <%= link_to admin_comment_path(comment), class: 'btn btn-primary btn-icon waves-effect' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_comment_path(comment), class: 'btn btn-primary btn-icon waves-effect' do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                  <%= link_to admin_comment_path(comment), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-icon waves-effect' do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div><!-- end col -->
</div>