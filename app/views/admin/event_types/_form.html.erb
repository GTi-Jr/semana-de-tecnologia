<%= form_for [:admin, @event_type] do |f| %>
  <% if @event_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event_type.errors.count, "Erros") %></h2>
      <ul>
      <% @event_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group text-right m-b-0">
    <%= button_tag action_text, type:'submit', class:'btn btn-primary waves-effect waves-light' %>
  </div>
<% end %>
