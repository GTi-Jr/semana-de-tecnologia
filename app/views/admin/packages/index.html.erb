<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-12">
    <div class="card-box table-responsive">
      <h4 class="header-title m-t-0 m-b-30"><%= titulo_pagina %></h4>
      <div class="row">
        <div class="col-sm-6">
          <div class="m-b-30">
            <%= link_to(new_admin_package_path, class:'btn btn-primary waves-effect waves-light') do %>
            New Package <i class="fa fa-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="responsive">
        <table class="table table-striped" id="datatable">
          <thead>
            <tr>
              <th>Título</th>
              <th>Descrição</th>
              <th>Capacidade</th>
              <th>Inscritos</th>
              <th>Programações</th>
              <th>Preço</th>
              <th data-orderable="false"></th>
            </tr>
          </thead>
          <tbody>
            <% @packages.each do |package| %>
            <tr>
              <td><%= package.title %></td>
              <td><%= package.description %></td>
              <td><%= package.limit %></td>
              <td><%= package.inscriptions.count %></td>
              <td>
                <% package.packages_events_types.each do |package_event_type| %>
                    <%= package_event_type.limit %> <%= package_event_type.event_type.name.pluralize(package_event_type.limit) %>,
                <% end %>
              </td>
              <td><%= package.price %></td>
              <td class="actions pull-right">
                 <div class="btn-group m-b-10">
                  <%= link_to admin_package_path(package), class: 'btn btn-primary btn-icon waves-effect' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_package_path(package), class: 'btn btn-primary btn-icon waves-effect' do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                  <%= link_to admin_package_path(package), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-icon waves-effect' do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </div>
              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div><!-- end col -->
</div>
</div>
