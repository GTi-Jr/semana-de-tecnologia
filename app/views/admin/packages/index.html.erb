<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-12">
    <div class="card-box table-responsive">
      <h4 class="header-title m-t-0 m-b-30">Packages</h4>
      <div class="row">
        <div class="col-sm-6">
          <div class="m-b-30">
            <%= link_to(new_admin_package_path, class:'btn btn-primary waves-effect waves-light') do %>
            New Package <i class="fa fa-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="responsive">
        <table class="table table-striped" id="datatable">
          <thead>
            <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Limit</th>
                            <th>Cursos/Palestras/Visitas</th>
                            <th>Price</th>
                            <th data-orderable="false"></th>
            </tr>
          </thead>
          <tbody>
            <% @packages.each do |package| %>
            <tr>
                            <td><%= package.title %></td>
                            <td><%= package.description %></td>
                            <td><%= package.limit %></td>
                            <td><%= package.courses %>/<%= package.lectures %>/<%= package.visits %></td>
                            <td><%= package.price %></td>
                            <td class="actions pull-right">
               <div class="btn-group m-b-10">
                  <%= link_to 'Mostrar', admin_package_path(package), class: 'btn btn-rounded btn-primary waves-effect' %>
                  <%= link_to 'Editar', edit_admin_package_path(package), class: 'btn btn-rounded btn-primary waves-effect' %>
                  <%= link_to 'Deletar', admin_package_path(package), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-rounded btn-danger waves-effect' %>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    </div><!-- end col -->
  </div>
</div>