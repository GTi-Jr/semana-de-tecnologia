<h4 class="text-uppercase text-center font-bold m-b-0">Cadastrar Equipe</h4>
<%= form_for(@team, url: challenge_team_inscription_path(@team), html: { class: 'form-horizontal m-t-20' }) do |f| %>

<% if !@team.errors.empty? %>
  <div class="alert alert-dismissable alert-danger">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <%= @team.errors.full_messages.first %>
  </div>
<% end %>
<div class="form-group ">
  <div class="col-xs-12">
    <%= f.label 'Nome' %>
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'Insira o nome de sua equipe' %>
  </div>
</div>
<div class="form-group ">
  <div class="col-xs-12">
    <%= f.label 'Email do responsável' %>
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Insira o email de contato' %>
  </div>
</div>
<div class="form-group ">
  <div class="col-xs-12">
    <%= f.label 'Método de pagamento' %>
    <%= f.select(:payment_method, @team.accepted_payment_methods, {}, { class: 'form-control' }) %>
  </div>
</div>
<div class="form-group ">
  <div class="col-xs-12">
    <%= f.label 'Número de membros' %>
    <%= f.number_field :limit, class: "form-control", placeholder: 'Número de membros' %>
  </div>
</div>
<div class="form-group text-center m-t-30">
  <div class="col-xs-12">
    <%= button_tag "Cadastrar membros", class:  "btn btn-custom btn-bordred btn-block waves-effect waves-light" %>
  </div>
</div>
<% end %>