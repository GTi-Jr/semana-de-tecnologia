<% provide(:title, "Pacotes") %>
<div class="row m-t-10">
  <div class="col-md-10 col-md-offset-1">

  
    <div class="row">

      <!--Pricing Column-->
 <%= form_for(@user, url:add_package_path(@user), method:  :post) do |f| %>
     <% @packages.each do |package|%>
      <article class="pricing-column col-lg-3 col-sm-6">
        <div class="inner-box card-box">
          <div class="plan-header text-center">
            <h3 class="plan-title"><%=package.title%></h3>
            <h4 class="plan-price">R$<%= package.price%> </h4>
            <h5 >Vagas:<%= package.limit%> </h5>
            
          </div>
          <ul class="plan-stats list-unstyled text-center">
            <li><%=package.description %></li>
            
            
          </ul>
         <%= f.radio_button :package_id, package.id %> 
      
         
        </div>
      </article>
    <%end%>

     <%= button_tag "Finalizar compra", class:  "btn btn-custom btn-bordred btn-block waves-effect waves-light"  %>
                           
    <%end%>

    </div><!-- end row -->

  </div>
</div>
      <!-- end row -->